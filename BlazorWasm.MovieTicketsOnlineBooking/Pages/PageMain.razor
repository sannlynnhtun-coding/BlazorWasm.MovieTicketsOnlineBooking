@page "/"
@implements IDisposable

<!-- ==========Overlay========== -->
<div class="overlay"></div>
<a href="#0" class="scrollToTop">
    <i class="fas fa-angle-up"></i>
</a>

<!-- ==========Header-Section========== -->
<NavMenu MainPage="MainPageClick"/>

@switch (_currentPage)
{
    case PageChangeEnum.PageMovie:
        <PageMoviesCard ShowCinema="ShowCinemaClick" />
        break;
    case PageChangeEnum.PageCinema:
        <PageShowCinema Data="_data" ShowRoomSeat="ShowRoomSeatClick" />
        break;
    case PageChangeEnum.PageSeat:
        <PageRoomSeat Data="_roomData" ShowCinema="ShowCinemaClick" />
        break;
    default:
        <PageMoviesCard ShowCinema="ShowCinemaClick" />
        break;
}

